<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:fitsSystemWindows="true"
    android:clipToPadding="false">
    <include layout="@layout/layout_base_header"
        android:id="@+id/action_bar"/>
     <com.baoyz.swipemenu.xlistview.XListView
        android:id="@+id/lv_home_discover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/action_bar"
        android:background="@color/white"
        android:divider="@null"
        android:scrollbars="none" />
     <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
         android:background="#80000000"
         android:gravity="center_horizontal"
         android:orientation="vertical"
         >
         <TextView 
             android:id="@+id/tv_rank_position"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="@dimen/base_radius_size"
             android:layout_marginBottom="@dimen/base_radius_size"

             android:textSize="@dimen/title_content_text_size"
             android:textColor="@color/white"
             />
          <TextView 
               android:id="@+id/tv_rank_time"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
               android:textSize="@dimen/content_text_size"
             android:layout_marginBottom="2dp"
             android:textColor="#b8b8b9"
             />
     </LinearLayout>
</RelativeLayout>