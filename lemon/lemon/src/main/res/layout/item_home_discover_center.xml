<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/album_layout_padding"
    android:paddingRight="@dimen/album_layout_padding"
    android:background="@null"
    android:orientation="horizontal" >

    <android.support.v7.widget.CardView
        android:id="@+id/rl_story1"
        style="@style/discover_card_style"
       >
        <RelativeLayout


            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_story_cover1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/home_discover_item_img_height"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_story_tip1"
            style="@style/discover_story_tip"
            android:layout_alignBottom="@id/img_story_cover1"
            android:text="106" />

        <TextView
            android:id="@+id/tv_story_cover1"
            style="@style/discover_story_title"
            android:layout_below="@id/img_story_cover1"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp" />
        <TextView
            android:id="@+id/tv_story_recommend1"
            android:text="暂无推荐语"
            android:layout_below="@id/tv_story_cover1"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="3dp"
            style="@style/discover_recommend_style" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/rl_story2"
        style="@style/discover_card_style">
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!-- android:background="@drawable/base_item_bg_selector"-->
        <ImageView
            android:id="@+id/img_story_cover2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/home_discover_item_img_height"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tv_story_tip2"
            style="@style/discover_story_tip"

            android:layout_alignBottom="@id/img_story_cover2"
            android:text="106" />

        <TextView
            android:id="@+id/tv_story_cover2"
            style="@style/discover_story_title"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_below="@id/img_story_cover2" />
        <TextView
            android:id="@+id/tv_story_recommend2"
            android:text="暂无推荐语"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="3dp"
            android:layout_below="@id/tv_story_cover2"
            style="@style/discover_recommend_style"  />
    </RelativeLayout>
</android.support.v7.widget.CardView>
</LinearLayout>