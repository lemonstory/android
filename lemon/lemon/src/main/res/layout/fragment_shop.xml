<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_bg"
    tools:context="com.xiaoningmeng.fragment.ShopFragment">

    <com.baoyz.swipemenu.xlistview.XListView
        android:id="@id/id_stickynavlayout_innerscrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/shop_item_margin_left"
        android:layout_marginRight="@dimen/shop_item_margin_left"
        android:layout_marginTop="@dimen/shop_item_margin_bottom"
        android:listSelector="@android:color/transparent"
        android:verticalSpacing="10dp"
        android:horizontalSpacing="10dp"/>
    <include layout="@layout/fragment_loading"
        android:id="@+id/rl_loading"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/my_orders_ib"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:onClick="onClick"
            android:background="@drawable/shop_btn_bg"
            android:src="@drawable/apk_all_topdata"
            android:layout_marginRight="5dp"
            android:alpha="0.5"
            />

        <ImageButton
            android:id="@+id/my_carts_ib"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:onClick="onClick"
            android:background="@drawable/shop_btn_bg"
            android:src="@drawable/apk_all_topbuy"
            android:alpha="0.5"/>

    </LinearLayout>
</FrameLayout>
