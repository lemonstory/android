<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/base_item_bg_selector" >
     <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="@dimen/account_item_height"
        android:paddingLeft="@dimen/account_item_margin_left"
        android:paddingRight="@dimen/account_item_margin_right"
        android:orientation="horizontal"
        >
       <TextView 
           android:id="@+id/tv_name"
           android:background="@null"
           android:layout_width="0dp"
           android:layout_weight="1"
            android:gravity="center_vertical|left"
           android:layout_height="match_parent"
           android:singleLine="true"
           /> 
        <ImageView 
               android:id="@+id/img_select"
            android:src="@drawable/item_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            />
   </LinearLayout>
     <View 
        style="@style/dividerStyle"
        />
    

</FrameLayout>
