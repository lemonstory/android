<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg" >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/action_bar"
        android:layout_marginBottom="@dimen/guide_margin_bottom"
        android:layout_marginLeft="@dimen/guide_margin_left"
        android:layout_marginRight="@dimen/guide_margin_left"
        android:layout_marginTop="@dimen/guide_margin_top">

        <RelativeLayout
            android:id="@+id/rl_guide_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/guide_padding_bottom"
            android:layout_marginLeft="@dimen/guide_padding_left"
            android:layout_marginTop="@dimen/guide_padding_top" >

            <ImageView
                android:id="@+id/img_guide_cover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/login_icon" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/img_guide_cover"
                android:layout_marginLeft="@dimen/base_margin"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/guide_text_padding"
                    android:text="选择宝宝生日"
                    android:textColor="#494949"
                    android:textSize="@dimen/text_size_eightteen" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我们将为您推荐合适的故事给您"
                    android:textColor="#9b9b9b"
                    android:textSize="@dimen/content_text_size" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_birth"
            android:layout_width="match_parent"
            android:layout_height="@dimen/guide_input_height"
            android:layout_below="@id/rl_guide_content"
            android:layout_marginLeft="@dimen/guide_padding_left"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/et_login_year"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/guide_input_bg"
                android:gravity="center"
                android:textColor="@color/base_black_title_color"
                android:textSize="@dimen/title_content_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/ablum_play_item_padding"
                android:layout_marginRight="@dimen/ablum_play_item_padding"
                android:gravity="center"
                android:text="年"
                android:textColor="@color/base_title_color"
                android:textSize="@dimen/title_content_text_size" />

             <TextView
                android:id="@+id/et_login_month"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/guide_input_bg"
                android:gravity="center"
                android:textColor="@color/base_black_title_color"
                android:textSize="@dimen/title_content_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/ablum_play_item_padding"
                android:layout_marginRight="@dimen/ablum_play_item_padding"
                android:gravity="center"
                android:text="月"
                android:textColor="@color/base_title_color"
                android:textSize="@dimen/title_content_text_size" />

            <TextView
                   android:id="@+id/et_login_day"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/guide_input_bg"
                android:gravity="center"
                android:textColor="@color/base_black_title_color"
                android:textSize="@dimen/title_content_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/ablum_play_item_padding"
                android:layout_marginRight="@dimen/ablum_play_item_padding"
                android:gravity="center"
                android:text="日"
                android:textColor="@color/base_title_color"
                android:textSize="@dimen/title_content_text_size" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>