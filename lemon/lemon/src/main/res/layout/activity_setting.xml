<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:fitsSystemWindows="true">

    <include
        android:id="@+id/action_bar"
        layout="@layout/layout_base_header" />

    <com.xiaoningmeng.view.ReboundScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/action_bar"
        android:background="@color/home_bg"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/rl_setting_reminder"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/account_item_height"
                android:layout_marginTop="@dimen/account_item_margin_right"
                android:background="@drawable/base_item_bg_selector"
                android:clickable="true"
                android:onClick="onClick" >

                <View style="@style/dividerStyle" />

                <ImageView
                    android:id="@+id/img_setting_reminder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/account_item_margin_left"
                    android:layout_marginRight="@dimen/account_item_padding"
                    android:src="@drawable/ic_setting_lock" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/img_setting_reminder"
                    android:text="定时提醒"
                    android:textColor="@color/base_black_title_color"
                    android:textSize="@dimen/title_content_text_size" />

                <ImageView
                    android:id="@+id/img_setting_reminder_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/account_item_margin_right"
                    android:src="@drawable/ic_item_right_arrow" />

                <TextView
                    android:id="@+id/tv_setting_alarm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/account_perasonal_padding"
                    android:layout_toLeftOf="@id/img_setting_reminder_right"
                    android:textColor="@color/base_text_color"
                    android:textSize="@dimen/content_text_size" />

                <View
                    style="@style/dividerStyle"
                    android:layout_alignParentBottom="true" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_setting_sleep"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/account_item_height"
                android:layout_marginTop="@dimen/account_item_inv"
                android:background="@drawable/base_item_bg_selector"
                android:clickable="true"
                android:onClick="onClick" >

                <View style="@style/dividerStyle" />

                <ImageView
                    android:id="@+id/img_setting_sleep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/account_item_margin_left"
                    android:layout_marginRight="@dimen/account_item_padding"
                    android:src="@drawable/ic_reminder_sleep" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/img_setting_sleep"
                    android:text="睡眠定时"
                    android:textColor="@color/base_black_title_color"
                    android:textSize="@dimen/title_content_text_size" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/account_item_margin_right"
                    android:src="@drawable/ic_item_right_arrow" />

                <View
                    style="@style/dividerStyle"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/account_item_margin_left" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_setting_rate"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/account_item_height"
                android:background="@drawable/base_item_bg_selector"
                android:clickable="true"
                android:onClick="onClick" >

                <ImageView
                    android:id="@+id/img_setting_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/account_item_margin_left"
                    android:layout_marginRight="@dimen/account_item_padding"
                    android:src="@drawable/ic_setting_rate" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/img_setting_rate"
                    android:text="好评一下"
                    android:textColor="@color/base_black_title_color"
                    android:textSize="@dimen/title_content_text_size" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/account_item_margin_right"
                    android:src="@drawable/ic_item_right_arrow" />

                <View
                    style="@style/dividerStyle"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/account_item_margin_left" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_setting_share"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/account_item_height"
                android:background="@drawable/base_item_bg_selector"
                android:clickable="true"
                android:onClick="onClick" >

                <ImageView
                    android:id="@+id/img_setting_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/account_item_margin_left"
                    android:layout_marginRight="@dimen/account_item_padding"
                    android:src="@drawable/ic_setting_share" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/img_setting_share"
                    android:text="分享给好友"
                    android:textColor="@color/base_black_title_color"
                    android:textSize="@dimen/title_content_text_size" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/account_item_margin_right"
                    android:src="@drawable/ic_item_right_arrow" />

                <View
                    style="@style/dividerStyle"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/account_item_margin_left" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_setting_check"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/account_item_height"
                android:background="@drawable/base_item_bg_selector"
                android:clickable="true"
                android:onClick="onClick" >

                <ImageView
                    android:id="@+id/img_setting_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/account_item_margin_left"
                    android:layout_marginRight="@dimen/account_item_padding"
                    android:src="@drawable/ic_setting_update" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/img_setting_check"
                    android:text="检查更新"
                    android:textColor="@color/base_black_title_color"
                    android:textSize="@dimen/title_content_text_size" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/account_item_margin_right"
                    android:src="@drawable/ic_item_right_arrow" />

                <View
                    style="@style/dividerStyle"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/account_item_margin_left" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_setting_feedback"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/account_item_height"
                android:background="@drawable/base_item_bg_selector"
                android:clickable="true"
                android:onClick="onClick" >

                <ImageView
                    android:id="@+id/img_setting_feedback"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/account_item_margin_left"
                    android:layout_marginRight="@dimen/account_item_padding"
                    android:src="@drawable/ic_setting_feedback" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/img_setting_feedback"
                    android:text="意见反馈"
                    android:textColor="@color/base_black_title_color"
                    android:textSize="@dimen/title_content_text_size" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/account_item_margin_right"
                    android:src="@drawable/ic_item_right_arrow" />

                <View
                    style="@style/dividerStyle"
                    android:layout_alignParentBottom="true" />
            </RelativeLayout>

