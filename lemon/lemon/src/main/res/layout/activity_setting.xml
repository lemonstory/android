            <com.xiaoningmeng.view.DrawableCenterTextView
                android:id="@+id/tv_setting_logout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_logout_btn_height"
                android:layout_marginLeft="@dimen/account_item_margin_right"
                android:layout_marginRight="@dimen/account_item_margin_right"
                android:layout_marginTop="@dimen/account_item_inv"
                android:background="@drawable/setting_logout_bg_selector"
                android:drawableLeft="@drawable/ic_setting_logout"
                android:drawablePadding="@dimen/base_radius_size"
                android:clickable="true"
                android:gravity="center_vertical"
                android:onClick="onClick"
                android:text="切换账号"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_eightteen" />


        </LinearLayout>

    </com.xiaoningmeng.view.ReboundScrollView>

</RelativeLayout>