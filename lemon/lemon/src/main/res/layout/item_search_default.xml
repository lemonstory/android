<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/search_item_height"
    android:background="@drawable/base_listview_item_bg_selector" >

    <com.xiaoningmeng.view.SelectableRoundedImageView
        android:id="@+id/img_search_item_cover"
        style="@style/roundImageViewStyle"
        android:layout_width="@dimen/search_item_cover_height"
        android:layout_height="@dimen/search_item_cover_height"
        android:layout_marginLeft="@dimen/search_item_margin_left"
        android:layout_marginRight="@dimen/search_item_margin_left"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/tv_search_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/search_item_height"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/img_search_item_cover"
        android:gravity="center_vertical|left"
        android:text="下雨的兔子"
        android:lines="2"
        android:ellipsize="end"
        android:layout_marginRight="@dimen/base_margin"
         android:textSize="@dimen/title_content_text_size"
        android:textColor="@color/base_title_color" />
    

    <View
        android:id="@+id/v_album_divider"
        style="@style/dividerStyle"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/img_search_item_cover" />

</RelativeLayout>