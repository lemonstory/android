<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fl_detail_intro"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.xiaoningmeng.view.CollapsibleTextView
        android:id="@+id/wv_album_detail_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/album_intro_margin_left"
        android:layout_marginRight="@dimen/album_intro_margin_left"
        android:layout_marginTop="@dimen/ablum_bar_radius"
        android:layout_marginBottom="@dimen/album_intro_margin" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_tag_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/wv_album_detail_content"
        android:layout_alignParentStart="true" />
    <RelativeLayout
        android:id="@+id/fl_ad"
        android:background="@color/dialong_top_bg"
        android:layout_margin="18dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="30dp">
    </RelativeLayout>
</RelativeLayout>