<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_bar_head"
    android:layout_width="match_parent"
    android:layout_height="@dimen/action_bar_height"
    android:background="@color/white" >

    <ImageView
        android:id="@+id/img_home_back"
        android:layout_width="@dimen/ablum_bar_height"
        android:layout_height="@dimen/ablum_bar_height"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:onClick="back"
        android:layout_marginLeft="@dimen/mine_item_cover_margin_left"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:paddingLeft="@dimen/base_margin"
        android:paddingRight="@dimen/base_margin"
        android:src="@drawable/bar_back" />

    <ImageView
        android:id="@+id/img_head_right"
        android:layout_width="@dimen/ablum_bar_height"
        android:layout_height="@dimen/ablum_bar_height"
        android:layout_marginRight="@dimen/mine_item_cover_margin_left"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/base_radius_size"
        android:paddingRight="@dimen/base_radius_size"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_head_right"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:gravity="center"
        android:onClick="onClick"
        android:paddingLeft="@dimen/bar_margin"
        android:paddingRight="@dimen/bar_margin"
        android:textColor="@color/actionBarTitleColor"
        android:textSize="@dimen/text_size_eightteen"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_head_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:layout_toLeftOf="@id/img_head_right"
        android:layout_toRightOf="@id/img_home_back"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/actionBarTitleColor"
        android:textSize="@dimen/title_text_size" />
    <View
       android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e1e1e1"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>