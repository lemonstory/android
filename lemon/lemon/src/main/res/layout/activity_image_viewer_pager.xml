<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_image_view_pager_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="false">

    <com.xiaoningmeng.view.HackyViewPager xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000" />

    <TextView
        android:id="@+id/tv_loading_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="10%"
        android:textSize="@dimen/title_text_size"
        android:textColor="@color/download_album_pb_bg_color"/>

    <TextView
        android:id="@+id/tv_pagination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/image_viewer_text_margin_bottom"
        android:layout_centerInParent="true"
        android:text="1/3"
        android:textSize="@dimen/title_text_size"
        android:textColor="@color/download_album_pb_bg_color"/>


</RelativeLayout>
