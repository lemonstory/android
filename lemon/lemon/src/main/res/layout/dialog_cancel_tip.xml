<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
     >

    <TextView 
        android:id="@+id/tv_dialog_tip"
        android:src="@drawable/ic_loading_white_01"
        android:paddingLeft="@dimen/dialog_padding"
        android:paddingRight="@dimen/dialog_padding"
		android:layout_marginTop="@dimen/dialog_margin_top"
		android:layout_marginBottom="@dimen/dialog_margin_bottom"
		android:gravity="center"
		android:maxLines="2"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="center"
        android:text="确定退出柠檬故事？"
        android:textSize="@dimen/title_content_text_size"
        android:textColor="@color/setting_title_text_color"
        />
             <View 
		    style="@style/dividerStyle"
		    />
    <LinearLayout
        android:id="@+id/ll_dialog_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_btn_height"
        android:orientation="horizontal"
         >
         		<TextView 
		    android:id="@+id/tv_dialog_min"
		    android:layout_width="0dp"
		    android:layout_height="match_parent"
		    android:text="最小化"
		    android:layout_weight="1"
		    android:background="@drawable/base_dialog_item_bg_selector"
		    android:textColor="#f6ad35"
		    android:textSize="@dimen/title_content_text_size"
		    android:gravity="center"
		    android:clickable="true"
		    />

		
		<View 
		    style="@style/verticalDividerStyle"
		    />
		<TextView 
		     android:id="@+id/tv_dialog_enter"
		    android:layout_width="0dp"
		    android:layout_height="match_parent"
		    android:background="@drawable/base_dialog_item_bg_selector"
		    android:text="退出"
		     android:layout_weight="1"
		    android:textColor="#f6ad35"
		    android:textSize="@dimen/title_content_text_size"
		    android:gravity="center"
		    android:clickable="true"
		    />

		<View 
		   style="@style/verticalDividerStyle"
		    />
		<TextView 
		    android:id="@+id/tv_dialog_cancel"
		    android:layout_width="0dp"
		    android:layout_height="match_parent"
		    android:text="取消"
		    android:layout_weight="1"
		    android:background="@drawable/base_dialog_item_bg_selector"
		    android:textColor="#9b9b9b"
		    android:textSize="@dimen/title_content_text_size"
		    android:gravity="center"
		    android:clickable="true"
		    />
		
		</LinearLayout>
</LinearLayout>

