<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_black_bg"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_dialog_loading"
        android:layout_width="@dimen/dialog_loading_width"
        android:layout_height="@dimen/mine_head_img_width"
        android:layout_gravity="center"
        android:scaleType="center"
        android:src="@drawable/ic_loading_white_01" />

    <TextView
        android:id="@+id/tv_dialog_loading"
        android:layout_width="@dimen/dialog_loading_width"
        android:layout_height="@dimen/guide_input_height"
        android:gravity="center"
        android:text="正在加载..."
        android:textColor="@color/white"
        android:textSize="@dimen/content_text_size" />

</LinearLayout>