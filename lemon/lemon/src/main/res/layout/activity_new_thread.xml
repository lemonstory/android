<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_bg"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:clipToPadding="false">

    <include layout="@layout/layout_base_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_subject"
            android:layout_width="match_parent"
            android:layout_height="@dimen/new_thread_subject_height"
            android:layout_marginLeft="@dimen/new_thread_margin"
            android:layout_marginRight="@dimen/new_thread_margin"
            android:background="@null"
            android:gravity="bottom|left"
            android:hint="请输入标题"
            android:inputType="text"
            android:singleLine="true"
            android:scrollHorizontally="false"
            android:imeOptions="actionSend"
            android:textColor="@color/base_text_color"
            android:textColorHint="#b0b0b0"
            android:textSize="@dimen/title_content_text_size" />

        <View

            android:layout_marginLeft="@dimen/new_thread_margin"
            android:layout_marginRight="@dimen/new_thread_margin"
            android:layout_marginTop="@dimen/new_thread_margin_bottom"
            android:layout_marginBottom="@dimen/new_thread_margin_bottom"
            style="@style/dividerStyle" />

        <EditText
            android:id="@+id/et_message"
            android:layout_width="match_parent"
            android:layout_height="@dimen/new_thread_mesage_height"
            android:layout_marginLeft="@dimen/new_thread_margin"
            android:layout_marginRight="@dimen/new_thread_margin"
            android:layout_marginBottom="@dimen/new_thread_message_margin_bottom"
            android:background="@null"
            android:gravity="top|left"
            android:hint="在此输入发帖内容"
            android:inputType="textMultiLine"
            android:singleLine="false"
            android:scrollHorizontally="false"
            android:imeOptions="actionSend"
            android:textColor="@color/base_text_color"
            android:textColorHint="#b0b0b0"
            android:textSize="@dimen/title_content_text_size" />

        <FrameLayout
            class="com.xiaoningmeng.fragment.AddedImageFragment"
            android:id="@+id/fl_added_image"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <View
            style="@style/dividerStyle"
            android:layout_marginTop="8dp"/>
        </LinearLayout>
</LinearLayout>