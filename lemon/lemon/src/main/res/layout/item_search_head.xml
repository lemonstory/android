<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:clickable="false"
    android:background="@drawable/base_listview_item_bg_selector">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_search_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/ablum_comment_head_margin_bottom"
            android:layout_marginLeft="@dimen/ablum_comment_head_margin_left"
            android:layout_marginRight="@dimen/ablum_comment_head_margin_left"
            android:layout_marginTop="@dimen/ablum_comment_head_margin_top"
            android:text="最近搜索"
            android:textColor="@color/base_date_color"
            android:textSize="@dimen/title_content_text_size" />

        <TextView
            android:id="@+id/tv_search_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
             android:paddingBottom="@dimen/ablum_comment_head_margin_bottom"
            android:paddingLeft="@dimen/ablum_comment_head_margin_left"
            android:paddingRight="@dimen/ablum_comment_head_margin_left"
            android:paddingTop="@dimen/ablum_comment_head_margin_top"
            android:text="清除搜索记录"
            android:layout_alignBottom="@id/tv_search_head"
            android:textColor="@color/discover_more_color_selector"
            android:textSize="@dimen/date_text_size" />
    </RelativeLayout>

    <View style="@style/dividerStyle" />

</LinearLayout>