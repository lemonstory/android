<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
     >
     <ImageView 
         android:id="@+id/img_dialog_tip"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@drawable/tip_dialog"
         android:layout_marginTop="@dimen/dialog_icon_margin_top"
         android:layout_marginBottom="@dimen/dialog_icon_margin_bottom"
         />
    <TextView 
        android:id="@+id/tv_dialog_tip"
        android:src="@drawable/ic_loading_white_01"
        android:paddingLeft="@dimen/dialog_padding"
        android:paddingRight="@dimen/dialog_padding"
		android:gravity="center"
		android:maxLines="2"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="center"
        android:text="@string/download_file_tip"
        android:textColor="@color/base_text_color"
        android:textSize="@dimen/content_text_size"
        />
<LinearLayout
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:gravity="center"
	android:orientation="horizontal">
	<ProgressBar
		android:id="@+id/rpb_download_progress"
		style="@style/downloadApkProgressBarStyle"
		android:layout_width="0dp"
		android:layout_weight="1"
		android:layout_height="@dimen/ablum_download_height"
		android:paddingLeft="@dimen/dialog_padding"
		android:paddingRight="@dimen/base_radius_size"
		android:layout_marginBottom="@dimen/dialog_padding"
		android:layout_marginTop="@dimen/dialog_padding"
		android:layout_gravity="center" />
	<TextView
		android:id="@+id/tv_download_progress"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="@dimen/content_text_size"
		android:layout_marginRight="@dimen/dialog_padding"
		android:textColor="@color/orage_color"
		android:text="10%"/>

</LinearLayout>

  	<View 
		    style="@style/dividerStyle"
		    />
		<TextView 
		    android:id="@+id/tv_dialog_cancel"
		    android:layout_width="match_parent"
		    android:layout_height="@dimen/dialog_btn_size"
		    android:text="取消"

		    android:background="@drawable/base_dialog_item_bg_selector"
		    android:textColor="@color/orage_color"
		    android:textSize="@dimen/title_content_text_size"
		    android:gravity="center"
		    android:clickable="true"
		    />
</LinearLayout>

