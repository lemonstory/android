<android.support.percent.PercentRelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true" >

    <RelativeLayout
        android:id="@+id/rl_paly_control"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="23%"
        app:layout_widthPercent="100%"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:paddingLeft="@dimen/play_center_margin"
        android:paddingRight="@dimen/play_center_margin" >

        <ImageView
            android:id="@+id/img_music_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:clickable="true"
            android:onClick="onClick"
            android:scaleType="center"
            android:src="@drawable/player_btn_pause_normal" />

        <ImageView
            android:id="@+id/img_music_per"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:onClick="onClick"
            android:padding="10dp"
            android:scaleType="center"
            android:src="@drawable/play_btn_per_selecotr" />

        <ImageView
            android:id="@+id/img_music_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:onClick="onClick"
            android:padding="10dp"
            android:scaleType="center"
            android:src="@drawable/play_btn_next_selecotr" />
    </RelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/rl_bar_head"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="77%"
        app:layout_widthPercent="100%"
        android:layout_above="@id/rl_paly_control"
        android:layout_alignParentTop="true"
        android:background="@color/system_bar_tint_color" >

        <ImageView
            android:id="@+id/img_home_back"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/action_bar_height"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:onClick="back"
            android:paddingLeft="@dimen/bar_margin"
            android:paddingRight="@dimen/base_margin"
            android:src="@drawable/play_back_selector" />

        <ImageView
            android:id="@+id/img_head_right"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/action_bar_height"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/dialog_icon_margin_top"
            android:paddingRight="@dimen/bar_margin"
            android:src="@drawable/play_btn_reminder_selecotr"
/>

        <TextView
            android:id="@+id/tv_head_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/action_bar_height"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@id/img_head_right"
            android:layout_toRightOf="@id/img_home_back"
             android:layout_marginLeft="@dimen/base_radius_size"
            android:layout_marginRight="@dimen/base_radius_size"
            android:gravity="center"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/white"
            android:textSize="@dimen/title_text_size" />

        <RelativeLayout
            android:id="@+id/rl_play_center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/play_center_margin_bottom2"
            android:layout_marginLeft="@dimen/play_center_margin"
            android:layout_marginRight="@dimen/play_center_margin"
            android:layout_marginTop="@dimen/play_center_margin_top2" >

            <ImageView
                android:id="@+id/img_music_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:clickable="true"
                android:onClick="onClick"
                android:scaleType="center"
                android:src="@drawable/play_btn_playlist_selector" />

            <ImageView
                android:id="@+id/img_music_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:clickable="true"
                android:onClick="onClick"
                android:scaleType="center" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_finish_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white_dialog_bg"
                    android:textSize="@dimen/date_text_size" />

                <TextView
                    android:id="@+id/tv_leave_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white_dialog_bg"
                    android:textSize="@dimen/date_text_size" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_player_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/rl_play_center"
            android:layout_marginLeft="@dimen/play_center_margin"
            android:layout_marginRight="@dimen/play_center_margin"
            android:layout_marginTop="@dimen/play_cover_new_margin_top2"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/img_music_fav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:gravity="center"
                android:onClick="onClick"
                android:src="@drawable/play_btn_fav_selecotr" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/img_music_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:gravity="center"
                android:onClick="onClick"
                android:src="@drawable/play_btn_share_selecotr" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/img_music_download"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:gravity="center"
                android:onClick="onClick"
                android:src="@drawable/play_btn_download_selecotr" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <RelativeLayout
                android:id="@+id/rl_music_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:gravity="center"
                android:onClick="onClick" >

                <ImageView
                    android:id="@+id/img_music_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/play_btn_comment_selecotr" />

                <TextView
                    android:id="@+id/tv_music_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="-8dp"
                    android:layout_toRightOf="@id/img_music_comment"
                    android:text="68"
                    android:textColor="@color/white"
                    android:textSize="@dimen/date_text_size" />
            </RelativeLayout>
        </LinearLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="60%"
            app:layout_widthPercent="77%"
            android:layout_above="@id/ll_player_more"
            android:layout_centerHorizontal="true"
            android:background="@drawable/play_bg" >

            <ImageView
                android:id="@+id/img_play_cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:scaleType="centerCrop" />
        </FrameLayout>
    </android.support.percent.PercentRelativeLayout>

    <SeekBar
        android:id="@+id/seekbar_play_music"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/rl_paly_control"
        android:layout_gravity="center"
        android:layout_marginBottom="-12dp"
        android:layout_marginTop="@dimen/share_title_margin_bottom"
        android:maxHeight="@dimen/play_seekbar_height"
        android:minHeight="@dimen/play_seekbar_height"
        android:padding="0dp"
        android:progressDrawable="@drawable/play_seekbar_bg_layer"
        android:thumb="@drawable/play_seekbar_thumb"
        android:thumbOffset="7dp" />

</android.support.percent.PercentRelativeLayout>