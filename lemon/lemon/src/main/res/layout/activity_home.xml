<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_height"
        >
        <include
            android:id="@+id/action_bar"
            layout="@layout/layout_header" />

        <include
            android:id="@+id/search_bar"
            layout="@layout/layout_search_header" />
    </FrameLayout>


    <FrameLayout
        android:id="@+id/fl_fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View
        style="@style/dividerStyle"
        android:background="#c9d0d1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_tab_height"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_home_discover"
            style="@style/home_tab_style"
            android:drawableTop="@drawable/tab_discover_selector"
            android:text="发现" />

        <TextView
            android:id="@+id/tv_home_mine"
            style="@style/home_tab_style"
            android:drawableTop="@drawable/tab_mine_selector"
            android:text="我的故事" />

        <TextView
            android:id="@+id/tv_home_forum"
            style="@style/home_tab_style"
            android:drawableTop="@drawable/tab_search_selector"
            android:text="搜索" />

        <TextView
            android:id="@+id/tv_home_account"
            style="@style/home_tab_style"
            android:drawableTop="@drawable/tab_perason_selector"
            android:text="账号" />
    </LinearLayout>

</LinearLayout>