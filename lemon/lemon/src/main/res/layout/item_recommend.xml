<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    android:orientation="horizontal"
    android:paddingLeft="2dp"
    android:paddingRight="2dp">
    <android.support.v7.widget.CardView
        android:id="@+id/rl_story1"
        style="@style/discover_card_style"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_story_cover1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/home_discover_item_img_height"
            android:layout_marginTop="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_story_tip1"
            style="@style/discover_story_tip"
            android:layout_alignBottom="@id/img_story_cover1"
            android:text="1062" />

        <TextView
            android:id="@+id/tv_story_cover1"
            style="@style/discover_story_title"
            android:layout_below="@id/img_story_cover1"
            android:paddingBottom="2dp"
            android:text="下雨的小兔子" />
    </RelativeLayout>
    </android.support.v7.widget.CardView>

