<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/home_bg"
    android:orientation="vertical" >

    <View
        android:id="@+id/v_add_address"
        style="@style/dividerStyle"
        android:layout_marginBottom="@dimen/account_item_inv"
        android:visibility="gone" />

    <View style="@style/dividerStyle" />

    <LinearLayout
        android:id="@+id/ll_add_adress"
        android:layout_width="match_parent"
        android:layout_height="@dimen/account_item_height"
        android:background="@drawable/base_item_bg_selector"
        android:clickable="true"
        android:onClick="onClick"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/account_item_margin_left"
        android:paddingRight="@dimen/account_item_margin_right" >

        <TextView
            android:id="@+id/tv_add_address"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:drawableLeft="@drawable/ic_adress_add"
            android:drawablePadding="@dimen/base_margin"
            android:gravity="center_vertical|left"
            android:singleLine="true"
            android:text="新增地址"
            android:textSize="@dimen/title_content_text_size" />

        <ImageView
            android:id="@+id/img_perasonal_select_male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_item_right_arrow" />
    </LinearLayout>

    <View style="@style/dividerStyle" />

</LinearLayout>